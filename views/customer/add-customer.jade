extends ../layout/base
block content
    section.content-header
        h1
            | Tambah Customer
        ol.breadcrumb
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Customer
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/customers/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama 
                                    input(type='text',value='#{name}',name='name',placeholder='Masukkan Nama', autofocus).form-control
                                .form-group
                                    label
                                        | Alamat
                                    input(type='text',name='address',placeholder='Masukkan Alamat').form-control
                                .form-group
                                    label
                                        | Email
                                    input(type='text',value='#{email}',name='email',placeholder='Masukkan Email').form-control
                                .form-group
                                    label
                                        | No. Hp
                                    input(type='text',name='phone',placeholder='Masukkan No. Hp').form-control
                            .box-footer
                                button(type='submit').btn.btn-success
                                    | Tambah

                                a(href='/customers').btn.btn-primary.pull-right
                                    | Kembali